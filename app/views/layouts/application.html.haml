!!! 5
%html
%head
	%title Movie Review on Rails
	= stylesheet_link_tag    'application', media: 'all'
	= javascript_include_tag 'application'
%body
	%nav.navbar.navbar-default
		.container
			.navbar-brand= link_to "Movie Review", root_path
			- if user_signed_in?
				%ul.nav.navbar-nav.navbar-left
					%li= link_to "New Movie Review", new_movie_path
					%li= link_to "Account Settings", edit_user_registration_path
					%li= link_to "Sign Out", destroy_user_session_path, method: :delete
			- else 
				%ul.nav.navbar-nav.navbar-left
					%li= link_to "Sign Up", new_user_registration_path
					%li= link_to "Log In", new_user_session_path
			%form{role: "search", class: "navbar-form navbar-right"}
				.form-group
					%input{type: "text", placeholder: "Look for a Movie", class: "form-control"}
				%btn{type: "submit", label: "Search", class: "btn btn-info"}
					Search

	.container
		- flash.each do |name, msg|
			= content_tag :div, msg, class: "alert alert-info"
			
		= yield






